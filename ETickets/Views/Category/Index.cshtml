@model IEnumerable<ETickets.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<div class="container">

<p>
        <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Movies</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-controller="Category" asp-action="ShowMovies" asp-route-id="@item.Id">Show All Movies</a> 
                
            </td>
            <td>
                <a asp-action="EditCategory" asp-controller="Category" asp-route-id="@item.Id" class="m-2 text-info">
                      <i class="fa-regular fa-pen-to-square"></i>
                 </a>
                 <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="m-2 text-danger">
                     <i class="fa-solid fa-trash-can"></i>
                  </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>