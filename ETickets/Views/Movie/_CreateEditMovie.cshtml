@model MovieViewModel

@{
    SelectList categories = new SelectList(ViewBag.categories, "Id", "Name");
    SelectList cinemas = new SelectList(ViewBag.cinemas, "Id", "Name");
}
<div class="row">
    
<div class="col-md-6">
<label asp-for="Name"></label>
@* <span class="required"></span> *@
<input class="form-control" asp-for="Name" />
<span class="text-danger" asp-validation-for="Name"></span>
<br />
</div>

    <div class="col-md-6">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
        <br />
    </div>

<div class="col-md-12">
<label asp-for="Description"></label>
<input class="form-control" asp-for="Description" />
<span class="text-danger" asp-validation-for="Description"></span>
<br />
</div>

    <div class="col-md-6">
<label asp-for="StartDate"></label>
<input class="form-control" asp-for="StartDate" value="@Model.StartDate" />
<span class="text-danger" asp-validation-for="StartDate"></span>
<br />
</div>
<div class="col-md-6">
<label asp-for="EndDate"></label>
<input class="form-control" asp-for="EndDate" value="@Model.EndDate" />
<span class="text-danger" asp-validation-for="EndDate"></span>
<br />
</div>
<div class="col-md-6">
<label asp-for="CategoryId"></label>
<select class="form-select" asp-for="CategoryId" asp-items="categories" value=""></select>
<span class="text-danger" asp-validation-for="CategoryId"></span>
<br />
</div>
<div class="col-md-6">
<label asp-for="CinemaId"></label>
<select class="form-select" asp-for="CinemaId" asp-items="cinemas" value=""> </select>
<span class="text-danger" asp-validation-for="CinemaId"></span>
<br />
</div>

    <div class="col-md-6">
        <label asp-for="ImgUrl"></label>
        <input type="file" class="form-control" asp-for="ImgUrl"/>
        <span class="text-danger" asp-validation-for="ImgUrl"></span>
        <br />
    </div>
    <div class="col-md-6">
        <label asp-for="TrailerUrl"></label>
        <input class="form-control" asp-for="TrailerUrl" />
        <span class="text-danger" asp-validation-for="TrailerUrl"></span>
        <br />
    </div>

        @foreach(var actor in ViewBag.actors)
        {<div class="col-3">
            <div class="form-check form-check-inline">

                <input class="form-check-input" type="checkbox" name="@actor.FirstName" id="@actor.FirstName" value="@actor.Id">
                <label class="form-check-label" for="inlineCheckbox1"><img src="/images/cast/@actor.ProfilePicture" class="rounded-circle" asp-append-version="true"></label>
            </div>
        </div>
        }


<input type="hidden" asp-for="Id" />
</div>