 @model List<ApplicationUser> 
@{
    ViewData["Title"] = "Index";
}
<div class="container">
<partial name="_DeleteModal.cshtml"></partial>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th>
                Gender
            </th>
            <th>
                Phone Number
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model)
        {
            
            <tr>
                <td>
                   @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="m-2 text-info"><i class="fa-regular fa-pen-to-square"></i></a>
                    <a href="#" class="m-2 text-danger delete-link" data-item-id="@item.Id"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
@section Scripts {
    <partial name="_DeleteModalScripts"></partial>
}
