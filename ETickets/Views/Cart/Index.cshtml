@using System.Security.Claims
@model IEnumerable<ETickets.ViewModels.CartViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    @{
        if (TempData["buySuccess"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["buySuccess"]
            </div>
        }
    }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
        </tr>
}
    </tbody>
</table>
    @if(Model.Count() > 0)
    {
        <div class="row">
    <a asp-action="Recet" asp-controller="Cart" class="col-6 btn btn-outline-danger">Recet</a>
        <a asp-action="BuyNow" asp-controller="Cart" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier).Value" class="col-6 btn btn-outline-info">Buy Now</a>
        </div>
    }
    else
    {
        <a asp-action="Index" asp-controller="Movie" ><p>Choose Movies</p></a>
    }
</div>