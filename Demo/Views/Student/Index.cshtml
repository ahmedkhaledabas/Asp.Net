@model List<Student>
<table class="table table-dark table-striped">

    <thead>
        <th> ID </th>
        <th> Name </th>
        <th> Level </th>
        <th> Desc </th>
        <th> Image </th>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Level</td>
                <!--<td><a href="/Student/ShowDesc?id=@student.Id">Show Desc</a></td>-->
                <td><a href="/Student/ShowDesc/@student.Id">Show Desc</a></td>
                <td><img src="~/images/@(student.Id).png" width="50px" /></td>
            </tr>
        }
    </tbody>
</table>