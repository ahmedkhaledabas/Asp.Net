@model ListItem
<h1>Edit Item </h1>
<h3>ListItem</h3>
<form method="post" action="/ListItem/SaveEdit/@Model.Id">
    <div class="form-group">
        <label for="name">Title</label>
        <input type="text" class="form-control" name="title" value="@Model.Title">
    </div>
    <br />
    <div class="form-group">
        <label for="name">Description</label>
        <input type="text" class="form-control" name="description" value="@Model.Description">
    </div>
    <br />
    <div class="form-group">
        <label for="name">DeadLine</label>
        <input type="datetime-local" class="form-control" name="deadLine" value="@Model.DeadLine">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

