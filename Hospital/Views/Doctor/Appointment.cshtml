@using ContactDoctor.Models
@model Doctor
<div id="appointmentInfo" style="display:none;" class="alert alert-success">
    <strong>Success!</strong> Patient Add.
</div>
<h1>Complete Appointment With @Model.Name</h1>
<form method="get" action="/Doctor/AddReservation">
    <div class="mb-3">
        <label for="Patient" class="form-label">Patient Name</label>
        <input type="text" class="form-control" name="Patient" placeholder="Ahmed Khaled" required>
    </div>
    <div class="mb-3">
        <label for="Date" class="form-label">Email address</label>
        <input type="date" class="form-control" name="Date" required>
    </div>
    <div class="mb-3">
        <label for="Time" class="form-label">Email address</label>
        <input type="time" class="form-control" name="Time" required>
    </div>
    <input name="Doctor" style="display:none" value="@Model.Name" />
    <button type="submit" onclick="myFunction()" class="btn btn-primary">Complete Appointment</button>
</form>



<script>
    function myFunction() {
        document.getElementById("appointmentInfo").style.display = "block";
    }
</script>

