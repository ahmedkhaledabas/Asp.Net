@model List<Category>
<a href="/Category/Add">Add New Category</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
            <th >@category.CategoryId</th>
            <td>@category.CategoryName</td>
                <td><a href="/Category/Delete/@category.CategoryId" class="btn btn-danger">Delete</a> <a href="#" class="btn btn-info">Edit</a></td>
        </tr>
        }
        
    </tbody>
</table>