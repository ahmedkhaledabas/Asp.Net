@model List<Product>
@if (Model.Count > 0)
{
    <section >
        <div class="row">
            <h3 class="text-center">Brands</h3>
            @foreach (var brand in ViewBag.brands)
            {
                <div class="col-2 m-1">
                    <a class="btn btn-primary text-decoration-none" href="/Category/ShowProductsBrands/@brand.BrandId">@brand.BrandName</a>
                </div>

            }
        </div>
        <br />
    </section>
    
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" style="height:230px" src="~/Images/bike.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <h5 class="card-title"> Brand : @product.Brand.BrandName</h5>
                        <h5 class="card-title"> Category : @product.Category.CategoryName</h5>
                        <p class="card-text"><span class="font-weight-bold">Model Year</span> @product.ModelYear</p>
                        <p class="card-text"><span class="font-weight-bold"> $ </span> @product.ListPrice</p>

                        <form method="post" action="/Cart/Add">
                            <input type="hidden" name="id" value="@product.ProductId" />
                            <div class="row">
                                <div class="col-3 form-group">
                                    <select name="quantity" class="form-select">
                                        @for (int i = 1; i < 10; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                                <button class="col-8 btn btn-primary" type="submit">Add To Cart</button>
                            </div>
                        </form>


                    </div>
                </div>
                <br />
            </div>

        }
    </div>
}
else
{
    <h1>No Data To Show</h1>
}