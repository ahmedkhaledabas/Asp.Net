@model Product
<form method="post" action="/Product/Save">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" name="ProductName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.ProductName" placeholder="Enter Name">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">ModelYear</label>
        <input type="number" name="ModelYear" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.ModelYear" placeholder="Enter Year">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">List Price</label>
        <input type="number" name="ListPrice" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.ListPrice" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    
    <div class="form-group">
        <label for="exampleInputPassword1">Brand</label>

        <select name="BrandId" class="form-select">
            @foreach (var brand in(List<Brand>) ViewData["brands"])
            {
                 <option value="@brand.BrandId">@brand.BrandName</option>
            }
           
        </select>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Category</label>

        <select name="CategoryId" class="form-select">
            @foreach (var category in (List<Category>) ViewData["category"])
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }

        </select>

    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>